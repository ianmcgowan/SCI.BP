PROMPT ''
LOOP
  LOOP
    PRINT 'O or Iconv:':
    INPUT CONV
    IF CONV='' OR CONV='/' THEN STOP
    IF CONV='O' OR CONV='I' THEN EXIT
  REPEAT
  
  PRINT 'Mask (e.g. D4/ MR2 G0*1):':
  INPUT MASK
  IF MASK='' OR MASK='/' THEN STOP
  
  PRINT 'Data:':
  INPUT D
  IF D='' OR D='/' THEN STOP
  
  IF CONV='O' THEN PRINT OCONV(D,MASK) ELSE PRINT ICONV(D,MASK)
REPEAT
