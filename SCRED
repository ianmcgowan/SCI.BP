FILE=FIELD(@SENTENCE,' ',2)
ITEM=FIELD(@SENTENCE,' ',3)
OPEN 'VOC' TO VOC ELSE STOP 201,'VOC'
READ REC FROM VOC, FILE ELSE STOP FILE:' - no VOC item'
IF REC<1>#'DIR' AND REC<1>#'LD' THEN STOP FILE:' - not a DIR type file'

PATH=REC<2>
IF REC<1>='LD' THEN
    IF INDEX(FILE,',',1) THEN
        PATH=REC<2>:FIELD(FILE,',',2)
    END ELSE
        PATH=REC<2>:'/':FIELD(REC<2>,'/',DCOUNT(REC<2>,'/'))
    END
END
E='!~/joe ':PATH:'/':ITEM
PRINT E
EXECUTE E
